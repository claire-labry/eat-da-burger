<div class="container">

  <div class='burgerimg'>
    <img src='assets/img/burger.png' alt="burger">
  </div>
  <div class="jumbotron">

    <h1>Burgers</h1>
    <div>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <span>
          <li>{{this.burger_name}}</li>
        </span>
        <button type='button' class='eatburger btn btn-light' id='eatbutton' data-id='{{this.id}}'
          data-newDevoured={{devour}}>Devour it!</button>
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div>
      <h2>Devoured Burgers</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <span>
          <li>{{this.id}} - {{this.burger_name}}</li>
        </span>
        {{/if}}
        {{/each}}
      </ul>
    </div>
    <form class="create-form">
      <div class='form-group'>
        <input type='text' class='form-control' id='newburger' name='burger' placeholder='add your burger here...'>
      </div>

      <button type='submit' id='addburger' class="btn btn-dark">Submit</button>
    </form>

  </div>
</div>