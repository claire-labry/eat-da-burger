<h1>Eat-da-Burger!</h1>

<h2>Burgers</h2>

<ul>
    {{#each burgers}}
      {{#unless devoured}}
        {{> burgers/burger-block devour=true}}
      {{/unless}}
    {{/each}}  
</ul>

<h2>Devoured Burgers</h2>

<ul>
    {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devour=false}}
        {{/if}}
    {{/each}}
</ul>

<form class="create-form">
<div class='form-group'>
    <input type='text' id ='burgers' name= 'burger' placeholder='add your burger here...'>
</div>

<button type='submit'>Submit</button>
</form>